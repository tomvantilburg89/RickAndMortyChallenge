{% extends 'base.html.twig' %}
{% block content %}
    <ul role="list" class="divide-y divide-gray-100">
        {% for character in characters %}
            <li class="relative flex justify-between gap-x-6 py-5">
                <div class="flex min-w-0 gap-x-4">
                    <div class="min-w-0 flex-auto">
                        <p class="text-sm font-semibold leading-6 text-gray-900">
                            <a href="{{ path('characterShow', {'id': character.id}) }}">
                                <span class="absolute inset-x-0 -top-px bottom-0"></span>
                                {{ character.name }}
                            </a>
                        </p>
                        <p class="mt-1 truncate text-xs leading-5 text-gray-500">
                            Origin: {{ character.origin.name }}
                        </p>
                    </div>
                </div>
                <div class="flex shrink-0 items-center gap-x-4">
                    <div class="hidden sm:flex sm:flex-col sm:items-end">
                        <p class="text-sm leading-6 text-gray-900">Species: {{ character.species }}</p>
                        <p class="mt-1 text-xs leading-5 text-gray-500">Status: {{ character.status }}</p>
                    </div>
                    <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor"
                         aria-hidden="true">
                        <path fill-rule="evenodd"
                              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                              clip-rule="evenodd"/>
                    </svg>
                </div>
            </li>
        {% endfor %}
    </ul>
    {% include 'parts/pagination.html.twig' with {'pagination': pagination, 'paginationPath': 'characters'} %}
{% endblock %}