<!doctype html>
<html class="h-full bg-gray-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://www.bax-shop.nl/templates/baxshop/img/logo/baxshop_fav_32x32.png">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="h-full">
<div class="min-h-full">
    <div class="bg-pink-600 pb-32">
        {% include 'parts/navigation.html.twig' %}
        <header class="py-10">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

                <div class="text-center">
                    <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-6xl">{{ title ?? 'No page title is set' }}</h1>
                    <p class="mt-6 text-lg leading-8 text-white">{{ joke.value ?? 'Chuck Norris is so strong, the code became to scared to propose a joke' }}</p>
                </div>
            </div>
        </header>
    </div>

    <main class="-mt-40">
        <div class="mx-auto max-w-7xl py-8 sm:px-6 lg:px-8">
            <!-- Your content -->
            <div class="bg-white px-4 py-5 sm:px-6 rounded-lg">
                {% block content %}{% endblock %}
                {% block pagination %}{% endblock %}
            </div>
        </div>
    </main>
</div>
</body>
</html>
