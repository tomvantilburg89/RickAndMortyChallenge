{% extends 'base.html.twig' %}
{% block content %}
    <div class="overflow-hidden">
        <div class=" border-gray-100">
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-900">Name</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ episode.name }}</dd>
                </div>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-900">Air date</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ episode.air_date }}</dd>
                </div>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-900">Episode</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ episode.episode }}</dd>
                </div>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium leading-6 text-gray-900">Characters in episode</dt>
                    {% if characters|length > 1 %}
                        <dd class="mt-2 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                            <div class="isolate flex -space-x-1 ">

                                {% for character in characters %}
                                    <a href="{{ path('characterShow', {'id': character.id}) }}">
                                        <img class="relative inline-block h-4 w-4 hover:h-16 hover:w-16 hover:-mt-6 hover:-mb-6 rounded-full ring-2 ring-white"
                                             src="{{ character.image }}" alt="">
                                    </a>
                                {% endfor %}
                            </div>
                        </dd>
                    {% else %}
                        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">Episode has no
                            characters
                        </dd>
                    {% endif %}
                </div>
            </dl>
        </div>
    </div>
{% endblock %}
